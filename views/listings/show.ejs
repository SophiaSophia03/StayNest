<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row">
    <div class="col-8 offset-3 mb-3">
  <h3 class="mt-3"><%= listing.title %></h3>
    </div>
    <div class="col-6 offset-3">
  <div class="card show-card listing-card">
    <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text"><i>Owned By : <%=listing.owner[0].username %></i><br></p>
      <p class="card-text"><%= listing.description %> <br></p>
      <p class="card-text"><b>Price:</b> $<%= listing.price.toLocaleString("en-CA") %> <br></p>
      <p class="card-text"><b>Location:</b> <%= listing.location %> <br></p>
      <p class="card-text"><b>Country:</b> <%= listing.country %></p>
    </div>
  </div>
  <div class="btns">
  <a href="/listings/<%=listing._id%>/edit" class="btn">Edit Listing</a>
  <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"><button class="btn button">Delete Listing</button>
  </div></form>
  <div class="review">
    <hr>
    <h4>Leave a review</h4>
    <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea rows="5" cols="30" id="comment" name="review[comment]" class="form-control" required></textarea>
        <div class="invalid-feedback">Please add a comment for review</div>
      </div>
      <button class="btn btn-ouline-dark mb-4">Submit</button>
    </form>
    <hr>
    <h4>All Reviews</h4>
    <div class="row">
  <%for(review of listing.reviews){%>
    <div class="card col-5 mb-4 ms-5 mt-3">
      <div class="card-body">
        <h6 class="card-title mt-2">Sophia</h6>
        <p class="card-text"><%=review.comment %></p>
        <h6 class="card-subtitle mb-2 text-body-secondary"><%=review.rating %> &#9733;</h6>
      </div>
      <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3" method="POST">
        <button type="submit" class="btn btn-sm button">Delete</button>
      </form>
    </div>
  <%}%>
</div>

  </div>
  </div>

</div>