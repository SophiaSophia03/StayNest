<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row">
    <div class="col-7 offset-2">
  <h3 class="mt-3">Create new listing !!</h3>
  <form method="POST" action="/listings">
    <br>
    <div>
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" class="form-control"     placeholder="Enter listing's title" type="text">
    </div>
    <br>
    <div>
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" placeholder="Enter description for listing" class="form-control"></textarea>
    </div>
    <br>
    <div>
      <label for="image" class="form-label">Image Link</label>
      <input name="listing[image]" placeholder="Enter image URL/Link" class="form-control">
    </div>
    <br>
    <div>
    <label for="price" class="form-label">Price</label>
    <input name="listing[price]" placeholder="Enter listing's Price" type="number" class="form-control">
    </div>
    <br>
    <div class="row">
    <div class="col-md-7">
      <label for="location" class="form-label">Location</label>
    <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control">
    </div>
    <br>
    <div class="col-md-5">
      <label for="country" class="form-label">Country</label>
    <input name="listing[country]" placeholder="Enter Country Name" class="form-control" type="text">
    </div>
  </div>
    <br>
    <button type="submit" class="btn mb-5">Add New Listing</button>
  </form>
</div>
</div>
</body>